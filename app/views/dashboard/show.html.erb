        color: white;
        text-decoration: none;
    }

    #page {
        background-color: #f0f0f0;
        width: 750px;
        margin: 0;
        margin-left: auto;
        margin-right: auto;
    }

    #content {
        float: left;
        background-color: white;
        border: 3px solid #aaa;
        border-top: none;
